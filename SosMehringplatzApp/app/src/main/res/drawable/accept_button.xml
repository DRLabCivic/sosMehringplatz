<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
            <item>
                <shape android:shape="oval">
                    <stroke
                        android:width="10dp"
                        android:color="@color/inputButtonColor"/>
                </shape>
            </item>
            <item>
                <bitmap android:src="@drawable/checkmark">
                </bitmap>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <stroke
                        android:width="10dp"
                        android:color="@color/buttonBgColorDisabled"/>
                </shape>
            </item>
            <item>
                <bitmap android:src="@drawable/checkmark">
                </bitmap>
            </item>
        </layer-list>
    </item>
</selector>
