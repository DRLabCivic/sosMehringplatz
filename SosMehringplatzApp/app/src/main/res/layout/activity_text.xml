<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.drl.lutz.sosmehringplatzapp.main.activities.TextActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">

        <EditText
            android:layout_width="@dimen/boxWidth"
            android:layout_height="@dimen/boxHeight"
            android:id="@+id/editText"
            android:hint="@string/textEditPlaceholder"
            style="@style/textField"
            android:maxLength="180"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/boxHeight"
            android:orientation="vertical">

            <Button
                android:id="@+id/cancelButton"
                style="@style/roundButtonSmall"
                android:background="@drawable/cancel_button"
                android:onClick="onCancelButtonClicked"
                />

            <Button
                android:id="@+id/acceptButton"
                style="@style/roundButtonSmall"
                android:background="@drawable/accept_button"
                android:onClick="onAcceptButtonClicked"
                android:layout_alignParentBottom="true"
                />

        </RelativeLayout>



    </LinearLayout>

</RelativeLayout>
